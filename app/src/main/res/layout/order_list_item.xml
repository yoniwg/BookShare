<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#f8eae5"
    android:id="@+id/bookContainer"
    android:clickable="true"
    android:longClickable="true">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/bookImage"
        android:src="@drawable/image_book"
        android:paddingEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="title"
        android:id="@+id/bookTitle"
        android:layout_alignTop="@+id/bookImage"
        android:layout_toEndOf="@+id/bookImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="author"
        android:id="@+id/bookAuthor"
        android:layout_below="@+id/bookTitle"
        android:layout_toEndOf="@+id/bookImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="price"
        android:id="@+id/price"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/supplierName"
        android:layout_alignBaseline="@+id/supplierName" />

    <TextView
        android:id="@+id/supplierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supplier name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/bookAuthor"
        android:layout_toEndOf="@+id/bookImage" />

    <NumberPicker
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/order_amount"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>